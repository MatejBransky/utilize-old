{
  "name": "@utilize/packages",
  "private": true,
  "author": "Matej Bransky",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatejBransky/utilize.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "check-format": "prettier --check . && lerna run check-format --parallel",
    "lint": "lerna run lint --parallel",
    "types": "lerna run types --parallel",
    "test": "lerna run test --parallel",
    "format": "prettier --check --write . && lerna run format --parallel",
    "commit": "git-cz",
    "bootstrap": "npx lerna bootstrap",
    "version": "yarn format",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'",
    "publish:ci": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@utilize/prettier-config": "*",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.8",
    "lerna": "4.0.0",
    "prettier": "2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "git branch | grep \"*\" | egrep -v \"^* main$\""
    }
  },
  "prettier": "@utilize/prettier-config"
}
